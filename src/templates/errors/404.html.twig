{% extends 'base.html.twig' %}

{% block title %}404 - page not found{% endblock %}

{% block meta %}
    <meta name="description" content="Pagina pe care o căutați nu a fost găsită. Explorați site-ul Maria Gheordunescu pentru a descoperi servicii de psihoterapie personalizate."/>
    <meta name="robots" content="noindex, follow"/>
{% endblock %}

{% block content %}
    <div class="bg-white">
        
        <div class="container mx-auto px-4 py-20 min-h-[70vh] flex flex-col justify-center items-center">
            <div class="max-w-lg w-full text-center">
                <div class="mb-8">
                    <svg class="mx-auto h-24 w-24 text-gold-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>

                <h1 class="font-syne text-5xl font-bold text-gray-900 mb-6">404</h1>
                <h2 class="font-syne text-3xl font-medium text-gray-800 mb-8">Page not found</h2>

                <p class="text-lg text-gray-600 mb-10">We are sorry but the page doesn't exist or it's not available.</p>

                <div class="space-y-4">
                    <a href="{{ url_for('home') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gold-700 hover:bg-gold-800 transition-all duration-300">
                        <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                        Go Home
                    </a>

                    <div class="mt-6 flex justify-center space-x-6">
                        <a href="{{ url_for('portfolio') }}" class="text-gold-700 hover:text-gold-800 font-medium">
                            Portfolio
                        </a>
                        <a href="{{ url_for('services') }}" class="text-gold-700 hover:text-gold-800 font-medium">
                            Services
                        </a>
                        <a href="{{ url_for('contact') }}" class="text-gold-700 hover:text-gold-800 font-medium">
                            Contact
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}