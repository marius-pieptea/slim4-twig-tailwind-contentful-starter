{% extends 'base.html.twig' %}

{% block title %}{{ site.name }} | About Us{% endblock %}

{% block meta %}
    {{parent()}}
    <meta name="description" content="{{ about.meta_description|default('Learn more about our company, our mission, values and the team that makes everything possible.') }}"/>
    <meta name="keywords" content="{{ about.meta_keywords|default('about us, company history, our team, our mission, our values') }}"/>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="{{ url_for('about') }}"/>
    <meta property="og:title" content="{{ site.name }} | About Us"/>
    <meta property="og:description" content="{{ about.meta_description|default('Learn more about our company, our mission, values and the team that makes everything possible.') }}"/>
    <meta property="og:image" content="{{ url_for('home') }}img/og.jpeg"/>

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image"/>
    <meta property="twitter:url" content="{{ url_for('about') }}"/>
    <meta property="twitter:title" content="{{ site.name }} | About Us"/>
    <meta property="twitter:description" content="{{ about.meta_description|default('Learn more about our company, our mission, values and the team that makes everything possible.') }}"/>
    <meta property="twitter:image" content="{{ url_for('home') }}img/og.jpeg"/>
{% endblock %}

{% block content %}
    <!-- Page Header with Background -->
    <section class="relative py-24 bg-gradient-to-br from-gray-900 to-black text-white">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 md:mb-8 animate-fade-in-down" data-aos="fade-up" data-aos-duration="800">
                {{ about.heading|default('About Us') }}
            </h1>
            <p class="text-lg md:text-xl text-gray-200 max-w-3xl animate-fade-in-up mx-auto" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100" style="line-height: 1.7;">
                {{ about.subheading|default('Learn about our journey, our mission and the values that drive everything we do') }}
            </p>
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-16 md:py-20 bg-white">
        <div class="container mx-auto px-6">
            <!-- Our Story Section -->
            <div class="flex flex-col lg:flex-row items-center mb-20">
                <!-- Mobile Image (visible only on mobile) -->
                <div class="block lg:hidden w-full mb-8" data-aos="fade-up" data-aos-duration="800">
                    <img src="{{ about.story_image|default('/img/about-story.avif') }}" alt="Our Story" class="w-full h-auto rounded-lg shadow-md">
                </div>
                
                <!-- Text Content -->
                <div class="lg:w-1/2 lg:pr-12" data-aos="fade-right" data-aos-duration="1000">
                    <h2 class="text-3xl font-bold mb-6">{{ about.story_heading|default('Our Story') }}</h2>
                    
                    <p class="text-gray-700 mb-4">
                        {{ about.story_p1|default('Our journey began with a simple idea: to create solutions that truly matter. Founded in [year], we started with a small team of dedicated professionals who shared a common vision.') }}
                    </p>
                    
                    <p class="text-gray-700 mb-4">
                        {{ about.story_p2|default('Over the years, we\'ve grown in size and expertise, expanding our services and building a reputation for excellence. Through challenges and successes, we\'ve remained committed to our core principles.') }}
                    </p>
                    
                    <p class="text-gray-700">
                        {{ about.story_p3|default('Today, we\'re proud to serve a diverse range of clients across industries, bringing the same passion and dedication to every project we undertake.') }}
                    </p>
                </div>
                
                <!-- Desktop Image (visible only on desktop) -->
                <div class="hidden lg:block lg:w-1/2" data-aos="fade-left" data-aos-duration="1000">
                    <div class="relative">
                        <div class="absolute inset-0 bg-yellow-400 rounded-2xl transform rotate-3"></div>
                        <img src="{{ about.story_image|default('/img/about-story.avif') }}" alt="Our Story" class="relative rounded-2xl shadow-lg w-full object-cover">
                    </div>
                </div>
            </div>

            <!-- Mission & Values -->
            <div class="bg-gray-50 rounded-2xl p-8 md:p-12 mb-20" data-aos="fade-up" data-aos-duration="800">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-3xl font-bold mb-8 text-center">{{ about.mission_heading|default('Our Mission & Values') }}</h2>
                    
                    <!-- Mission -->
                    <div class="mb-12">
                        <h3 class="text-xl font-semibold mb-4">{{ about.mission_subheading|default('Mission') }}</h3>
                        <p class="text-gray-700">
                            {{ about.mission_text|default('Our mission is to deliver exceptional value through innovative solutions that empower our clients to succeed. We strive to understand each client\'s unique needs and challenges, working collaboratively to achieve their goals while maintaining the highest standards of quality and integrity.') }}
                        </p>
                    </div>
                    
                    <!-- Values -->
                    <h3 class="text-xl font-semibold mb-4">{{ about.values_subheading|default('Core Values') }}</h3>
                    <div class="grid md:grid-cols-2 gap-6">
                        {% for value in about.values|default([
                            {title: 'Integrity', description: 'We conduct business with honesty, transparency, and ethical standards in all interactions.'},
                            {title: 'Excellence', description: 'We pursue excellence in everything we do, constantly striving to exceed expectations.'},
                            {title: 'Innovation', description: 'We embrace creative thinking and new technologies to deliver forward-looking solutions.'},
                            {title: 'Collaboration', description: 'We believe in the power of teamwork and partnership with our clients and each other.'}
                        ]) %}
                            <div class="flex items-start">
                                <div class="bg-yellow-400 p-2 rounded-full mr-4 mt-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="font-semibold mb-2">{{ value.title }}</h4>
                                    <p class="text-gray-600 text-sm">{{ value.description }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            
            <!-- Team Section -->
            <div>
                <h2 class="text-3xl font-bold mb-10 text-center" data-aos="fade-up" data-aos-duration="800">
                    {{ about.team_heading|default('Our Team') }}
                </h2>
                
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {% for member in about.team|default([
                        {
                            name: 'Jane Doe',
                            role: 'Chief Executive Officer',
                            bio: 'Jane brings over 15 years of industry experience and leadership to our company.',
                            image: '/img/team1.avif'
                        },
                        {
                            name: 'John Smith',
                            role: 'Chief Technology Officer',
                            bio: 'John leads our technical operations with expertise in innovative solutions and strategic planning.',
                            image: '/img/team2.avif'
                        },
                        {
                            name: 'Sarah Johnson',
                            role: 'Head of Client Services',
                            bio: 'Sarah ensures exceptional service delivery and client satisfaction across all our projects.',
                            image: '/img/team3.avif'
                        }
                    ]) %}
                        <div class="bg-white rounded-lg overflow-hidden shadow-md transition-transform duration-300 hover:-translate-y-2" data-aos="fade-up" data-aos-duration="800" data-aos-delay="{{ loop.index * 100 }}">
                            <div class="aspect-w-4 aspect-h-3 overflow-hidden">
                                <img src="{{ member.image }}" alt="{{ member.name }}" class="w-full h-64 object-cover object-center">
                            </div>
                            <div class="p-6">
                                <h3 class="text-xl font-semibold">{{ member.name }}</h3>
                                <p class="text-yellow-600 text-sm mb-3">{{ member.role }}</p>
                                <p class="text-gray-600">{{ member.bio }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <!-- Statistics Section -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
                {% for stat in about.stats|default([
                    {value: '10+', label: 'Years Experience'},
                    {value: '200+', label: 'Projects Completed'},
                    {value: '50+', label: 'Team Members'},
                    {value: '98%', label: 'Client Satisfaction'}
                ]) %}
                    <div data-aos="fade-up" data-aos-duration="800" data-aos-delay="{{ loop.index * 100 }}">
                        <div class="text-4xl md:text-5xl font-bold mb-2 text-yellow-500">{{ stat.value }}</div>
                        <div class="text-gray-500 font-medium">{{ stat.label }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 md:py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-xl py-12 px-8 md:px-12 text-center text-white shadow-xl">
                <h2 class="text-3xl md:text-4xl font-bold mb-6" data-aos="fade-up" data-aos-duration="800">
                    {{ about.cta_heading|default('Ready to work with us?') }}
                </h2>
                <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100">
                    {{ about.cta_text|default('Contact our team today to discuss your needs and discover how we can help your business succeed.') }}
                </p>
                <a href="{{ about.cta_button_url|default('/contact') }}" class="inline-block bg-yellow-400 hover:bg-yellow-500 text-black font-medium px-8 py-3 rounded-md shadow-md transition-all duration-300 transform hover:-translate-y-1" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
                    {{ about.cta_button_text|default('Get In Touch') }}
                </a>
            </div>
        </div>
    </section>
{% endblock %}