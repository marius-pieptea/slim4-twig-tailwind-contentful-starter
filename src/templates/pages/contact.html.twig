{% extends 'base.html.twig' %}

{% block title %}Contact Us |
	{{ site.name }}
{% endblock %}

{% block meta %}
	<meta name="description" content="{{ contact.meta_description|default('Get in touch with our team. We are here to answer your questions and provide the solutions you need.') }}"/>
	<meta
	name="keywords" content="{{ contact.meta_keywords|default('contact us, get in touch, email, phone, location, address') }}"/>

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website"/>
	<meta property="og:url" content="{{ url_for('contact') }}"/>
	<meta property="og:title" content="Contact Us | {{ site.name }}"/>
	<meta property="og:description" content="{{ contact.meta_description|default('Get in touch with our team. We are here to answer your questions and provide the solutions you need.') }}"/>
	<meta
	property="og:image" content="{{ url_for('home') }}img/contact-cover.webp"/>

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image"/>
	<meta property="twitter:url" content="{{ url_for('contact') }}"/>
	<meta property="twitter:title" content="Contact Us | {{ site.name }}"/>
	<meta property="twitter:description" content="{{ contact.meta_description|default('Get in touch with our team. We are here to answer your questions and provide the solutions you need.') }}"/>
	<meta property="twitter:image" content="{{ url_for('home') }}img/contact-cover.webp"/>
{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="relative py-24 bg-gradient-to-br from-gray-900 to-black text-white">


	<div class="container mx-auto px-4 relative z-10">
		<div class="max-w-4xl mx-auto text-center">
			<h1 class="text-4xl md:text-5xl font-bold text-white mb-6" data-aos="fade-up" data-aos-duration="800">
				Contact Us
			</h1>
			<p class="text-lg md:text-xl text-gray-300" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100">
				{{ contact.hero_text|default('Get in touch with our team. We\'re here to help and answer any questions you might have.') }}
                </p>
            </div>
        </div>
    </section>

    <!-- Contact Form & Info Section -->
    <section class="py-16 md:py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
                <!-- Contact Form -->
                <div class="bg-gray-50 rounded-xl p-8 md:p-10 shadow-lg" data-aos="fade-right" data-aos-duration="800">
                    <h2 class="text-2xl md:text-3xl font-bold mb-6">Send Us a Message</h2>
                    
                    <form id="contactForm" action="/" method="post" class="space-y-6">
                        <!-- Name -->
                        <div>
                            <label for="name" class="block text-gray-700 font-medium mb-2">Your Name</label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                placeholder="Enter your name" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                required
                            >
                        </div>
                        
                        <!-- Email -->
                        <div>
                            <label for="email" class="block text-gray-700 font-medium mb-2">Email Address</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                placeholder="Enter your email" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                required
                            >
                        </div>
                        
                        <!-- Phone -->
                        <div>
                            <label for="phone" class="block text-gray-700 font-medium mb-2">Phone Number</label>
                            <input 
                                type="tel" 
                                id="phone" 
                                name="phone" 
                                placeholder="Enter your phone number" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                            >
                        </div>
                        
                        <!-- Subject -->
                        <div>
                            <label for="subject" class="block text-gray-700 font-medium mb-2">Subject</label>
                            <select 
                                id="subject" 
                                name="subject" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                required
                            >
                                <option value="" selected disabled>Please select a subject</option>
                                <option value="General Inquiry">General Inquiry</option>
                                <option value="Project Quote">Project Quote</option>
                                <option value="Support">Support</option>
                                <option value="Partnership">Partnership</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        
                        <!-- Message -->
                        <div>
                            <label for="message" class="block text-gray-700 font-medium mb-2">Your Message</label>
                            <textarea 
                                id="message" 
                                name="message" 
                                rows="5" 
                                placeholder="Enter your message" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                required
                            ></textarea>
                        </div>
                        
                        <!-- Privacy Policy Checkbox -->
                        <div class="flex items-start">
                            <input 
                                type="checkbox" 
                                id="privacy" 
                                name="privacy" 
                                class="mt-1 mr-3" 
                                required
                            >
                            <label for="privacy" class="text-sm text-gray-600">
                                I agree to the <a href="{{ url_for('privacy-policy') }}" class="text-yellow-500 hover:text-yellow-700 underline">privacy policy</a> and consent to being contacted regarding my request.
                            </label>
                        </div>
                        
                        <!-- Submit Button -->
                        <div>
                            <button 
                                type="submit" 
                                class="w-full bg-yellow-400 hover:bg-yellow-500 text-black font-medium py-3 px-6 rounded-md transition-colors duration-300"
                            >
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
                
                <!-- Contact Information -->
                <div class="space-y-8" data-aos="fade-left" data-aos-duration="800">
                    <div class="space-y-6">
                        <h2 class="text-2xl md:text-3xl font-bold">Our Contact Information</h2>
                        <p class="text-gray-600 leading-relaxed">
                            {{ contact.info_text|default('Have questions or need assistance? Our team is here to help. Contact us using any of the methods below.') }}
                        </p>
                        
                        <!-- Contact Methods -->
                        <div class="space-y-4 mt-8">
                            <!-- Address -->
                            <div class="flex items-start">
                                <div class="bg-yellow-400 p-3 rounded-full mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900">Address</h3>
                                    <address class="not-italic text-gray-600 mt-1">
                                        {{ contact.address|default('123 Business Street, City, State 12345') }}
                                    </address>
                                </div>
                            </div>
                            
                            <!-- Email -->
                            <div class="flex items-start">
                                <div class="bg-yellow-400 p-3 rounded-full mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900">Email</h3>
                                    <a href="mailto:{{ contact.email|default('info@example.com') }}" class="text-gray-600 hover:text-yellow-500 mt-1 block">{{ contact.email|default('info@example.com') }}</a>
                                </div>
                            </div>
                            
                            <!-- Phone -->
                            <div class="flex items-start">
                                <div class="bg-yellow-400 p-3 rounded-full mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900">Phone</h3>
                                    <a href="tel:{{ contact.phone|default('+1234567890') }}" class="text-gray-600 hover:text-yellow-500 mt-1 block">{{ contact.phone|default('+1 (234) 567-890') }}</a>
                                </div>
                            </div>
                            
                            <!-- Hours -->
                            <div class="flex items-start">
                                <div class="bg-yellow-400 p-3 rounded-full mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900">Business Hours</h3>
                                    <p class="text-gray-600 mt-1">{{ contact.hours|default('Monday - Friday: 9AM - 5PM') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Google Map -->
                    <div class="mt-10">
                        <div class="h-80 rounded-lg overflow-hidden shadow-lg border border-gray-200" data-aos="fade-up" data-aos-duration="800">
                            <iframe 
                                class="w-full h-full" 
                                src="{{ contact.map_url|default('https://maps.google.com/maps?q=New+York&t=&z=13&ie=UTF8&iwloc=&output=embed') }}" 
                                allowFullScreen="" 
                                loading="lazy"
                                title="Our Location"
                            ></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section (Optional) -->
    {% if contact.faqs is defined and contact.faqs|length > 0 %}
        <section class="py-16 bg-gray-50">
            <div class="container mx-auto px-6">
                <h2 class="text-3xl font-bold mb-12 text-center" data-aos="fade-up" data-aos-duration="800">
                    Frequently Asked Questions
                </h2>
                
                <div class="max-w-3xl mx-auto space-y-6">
                    {% for faq in contact.faqs %}
                        <div class="bg-white rounded-lg shadow-md p-6" data-aos="fade-up" data-aos-duration="800" data-aos-delay="{{ loop.index * 100 }}">
                            <button class="faq-toggle w-full flex justify-between items-center text-left">
                                <h3 class="text-lg font-semibold pr-8">{{ faq.question }}</h3>
                                <svg class="faq-icon w-5 h-5 text-yellow-500 transform transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>
                            <div class="faq-answer mt-4 text-gray-600 hidden">
                                <p>{{ faq.answer }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}
    
    <!-- Connect with Us on Social Media -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center">
                <h2 class="text-3xl font-bold mb-8" data-aos="fade-up" data-aos-duration="800">Connect With Us</h2>
                <p class="text-gray-600 mb-10 max-w-2xl mx-auto" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100">
                    {{ contact.social_text|default('Follow us on social media to stay updated with our latest projects, news, and insights.') }}
                </p>
                
                <div class="flex justify-center space-x-6" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
                    {% for social in socials|default([
                        {name: 'Facebook', icon: 'fab fa-facebook-f', url: 'https://facebook.com/'},
                        {name: 'Twitter', icon: 'fab fa-twitter', url: 'https://twitter.com/'},
                        {name: 'Instagram', icon: 'fab fa-instagram', url: 'https://instagram.com/'},
                        {name: 'LinkedIn', icon: 'fab fa-linkedin-in', url: 'https://linkedin.com/'}
                    ]) %}
                        <a href="{{ social.url }}" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 hover:bg-yellow-400 text-gray-600 hover:text-black transition-all duration-300" title="{{ social.name }}">
                            <i class="{{ social.icon }}"></i>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Signup (Optional) -->
    <section class="py-16 md:py-20 bg-gray-50">
        <div class="container mx-auto px-6">
            <div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-xl py-12 px-8 md:px-12 text-center text-white shadow-xl">
                <h2 class="text-3xl md:text-4xl font-bold mb-6" data-aos="fade-up" data-aos-duration="800">
                    {{ contact.newsletter_heading|default('Stay Updated') }}
                </h2>
                <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100">
                    {{ contact.newsletter_text|default('Subscribe to our newsletter to receive updates, news, and insights directly in your inbox.') }}
                </p>
                
                <form class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
                    <input 
                        type="email" 
                        placeholder="Enter your email" 
                        class="flex-grow px-5 py-3 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400"
                        required
                    >
                    <button type="submit" class="bg-yellow-400 hover:bg-yellow-500 text-black font-medium px-6 py-3 rounded-md transition-colors duration-300">
                        Subscribe
                    </button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form submission handling
            const contactForm = document.getElementById('contactForm');
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    // You can add client-side validation here if needed
                    // This is just a placeholder for form submission handling
                    
                    /* Example validation:
                    const email = document.getElementById('email').value;
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!emailRegex.test(email)) {
                        e.preventDefault();
                        alert('Please enter a valid email address');
                        return;
                    }
                    */
                });
            }
            
            // FAQ toggles
            const faqToggles = document.querySelectorAll('.faq-toggle');
            if (faqToggles.length > 0) {
                faqToggles.forEach(toggle => {
                    toggle.addEventListener('click', function() {
                        const answer = this.nextElementSibling;
                        const icon = this.querySelector('.faq-icon');
                        
                        answer.classList.toggle('hidden');
                        icon.classList.toggle('rotate-180');
                    });
                });
            }
        });
    </script>
{% endblock %}
 
		
