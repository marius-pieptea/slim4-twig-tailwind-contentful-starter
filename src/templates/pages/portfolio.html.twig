{% extends 'base.html.twig' %}

{% block title %}Portfolio |
	{{ site.name }}
{% endblock %}

{% block meta %}
	<meta name="description" content="Explore our portfolio of high-quality custom projects. Each project reflects our commitment to quality and innovative design."/>
	<meta
	name="keywords" content="portfolio, projects, custom design, interior design, furniture, custom projects"/>

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website"/>
	<meta property="og:url" content="{{ url_for('portfolio') }}"/>
	<meta property="og:title" content="Portfolio | {{ site.name }}"/>
	<meta property="og:description" content="Explore our collection of custom projects and interior designs. Each project reflects our commitment to quality and innovative design."/>
	<meta
	property="og:image" content="{{ url_for('home') }}img/portfolio-cover.webp"/>

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image"/>
	<meta property="twitter:url" content="{{ url_for('portfolio') }}"/>
	<meta property="twitter:title" content="Portfolio | {{ site.name }}"/>
	<meta property="twitter:description" content="Explore our collection of custom projects and interior designs. Each project reflects our commitment to quality and innovative design."/>
	<meta
	property="twitter:image" content="{{ url_for('home') }}img/portfolio-cover.webp"/>

	<!-- Additional SEO -->
	<link rel="canonical" href="{{ url_for('portfolio') }}"/>
	<meta name="robots" content="index, follow"/>
{% endblock %}

{% block content %}
	<!-- Hero Section with Modern Design -->
	<section class="relative py-24 bg-gradient-to-br from-gray-900 to-black text-white">
		
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl font-bold text-white mb-6 md:mb-8 animate-fade-in-down" data-aos="fade-up" data-aos-duration="800">
				Our Portfolio
			</h1>
			<p class="text-lg md:text-xl text-gray-200 max-w-3xl animate-fade-in-up mx-auto" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100" style="line-height: 1.7;">
				Explore our collection of custom projects and interior designs. Each project reflects our commitment to quality and innovative design.
			</p>
		</div>
	</section>

	<section class="py-16 md:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="flex flex-col gap-24">
				{% for item in portfolioItems %}
					<div
						class="flex flex-col md:flex-row bg-gray-50 rounded-xl overflow-hidden shadow-lg {% if loop.index is even %}md:flex-row-reverse{% endif %}" data-aos="fade-up" data-aos-duration="800" data-aos-delay="{{ loop.index * 100 }}">
						<!-- Image side -->
						<div class="w-full md:w-1/2 relative">
							<div class="aspect-[4/3] w-full overflow-hidden">
								{% if item.mainImage.url %}
									<img src="{{ item.mainImage.url }}" alt="{{ item.mainImage.title }}" class="w-full h-full object-cover transition-transform duration-500 hover:scale-105">
								{% endif %}
							</div>
						</div>

						<!-- Text content side -->
						<div class="w-full md:w-1/2 flex flex-col justify-center space-y-8 p-8">
							<h2 class="text-3xl md:text-4xl font-bold leading-tight">
								{{ item.title }}
							</h2>

							<p class="text-gray-600 text-lg">
								{{ item.description }}
							</p>

							<a href="{{ url_for('portfolio-item', {'slug': item.slug}) }}" class="group inline-flex items-center gap-2 text-yellow-500 hover:text-yellow-600 transition-colors duration-300 w-fit font-medium">
								<span>View Project</span>
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1">
									<line x1="5" y1="12" x2="19" y2="12"></line>
									<polyline points="12 5 19 12 12 19"></polyline>
								</svg>
							</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>

	<!-- Call to Action Section -->
	<section class="py-16 md:py-20 bg-gray-50">
		<div class="container mx-auto px-6">
			<div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-xl py-12 px-8 md:px-12 text-center text-white shadow-xl">
				<h2 class="text-3xl md:text-4xl font-bold mb-6" data-aos="fade-up" data-aos-duration="800">
					Ready to start your project?
				</h2>
				<p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100">
					Contact us today to discuss how we can bring your vision to life with our custom design and execution services.
				</p>
				<a href="{{ url_for('contact') }}" class="inline-block bg-yellow-400 hover:bg-yellow-500 text-black font-medium px-8 py-3 rounded-md shadow-md transition-all duration-300 transform hover:-translate-y-1" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
					Get In Touch
				</a>
			</div>
		</div>
	</section>

	
{% endblock %}
