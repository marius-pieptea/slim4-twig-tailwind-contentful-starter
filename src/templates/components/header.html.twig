<style>
	/* Active link styling */
	.nav-link.active {
		font-weight: 600;
		color: black;
		position: relative;
	}

	.nav-link.active::after {
		content: '';
		position: absolute;
		bottom: -8px;
		left: 0;
		width: 100%;
		height: 2px;
		background-color: #eab308; /* yellow-400 */
		transform-origin: center;
		transform: scaleX(0.7);
		transition: transform 0.3s ease;
	}

	.nav-link:hover.active::after {
		transform: scaleX(1);
	}

	.nav-link-mobile.active {
		font-weight: 600;
		background-color: #f9fafb;
		color: black;
		border-left: 3px solid #eab308;
	}

	/* Slide animation for mobile menu */
	#mobileMenu.slide-down {
		display: block;
		animation: slideDown 0.3s ease-in-out forwards;
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			transform: translateY(-10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>

<script>
	// Mobile menu toggle with animation
document.getElementById('mobileMenuBtn').addEventListener('click', function () {
const mobileMenu = document.getElementById('mobileMenu');
mobileMenu.classList.toggle('hidden');
mobileMenu.classList.toggle('slide-down');
});

// Mobile services dropdown toggle with arrow rotation
document.getElementById('mobileServiciiBtn').addEventListener('click', function () {
const dropdown = document.getElementById('mobileServiciiDropdown');
dropdown.classList.toggle('hidden');

const arrow = document.getElementById('mobileServiciiArrow');
arrow.classList.toggle('rotate-180');
});

// Set active menu item based on current URL
document.addEventListener('DOMContentLoaded', function () {
const currentPath = window.location.pathname;

// Handle desktop navigation
const desktopLinks = document.querySelectorAll('.nav-link');
desktopLinks.forEach(link => {
const linkPath = link.getAttribute('href');
// Check if current path matches link or if we're at root
if ((currentPath === linkPath) || (linkPath !== '/' && currentPath.startsWith(linkPath)) || (currentPath === '/' && linkPath === '/')) {
link.classList.add('active');
}
});

// Handle mobile navigation
const mobileLinks = document.querySelectorAll('.nav-link-mobile');
mobileLinks.forEach(link => {
const linkPath = link.getAttribute('href');
if ((currentPath === linkPath) || (linkPath !== '/' && currentPath.startsWith(linkPath)) || (currentPath === '/' && linkPath === '/')) {
link.classList.add('active');

// If this is a submenu item, expand the parent dropdown
const parentDropdown = link.closest('#mobileServiciiDropdown');
if (parentDropdown) {
parentDropdown.classList.remove('hidden');
document.getElementById('mobileServiciiArrow').classList.add('rotate-180');
}
}
});

// Special case for servicii dropdown
const serviciiPaths = ['/psihoterapie-individuala', '/psihoterapie-de-cuplu', '/psihoterapie-de-familie', '/psihoterapie-online'];

if (serviciiPaths.some(path => currentPath.includes(path))) { // Highlight the Servicii main item in both desktop and mobile
const desktopServicii = document.querySelector('.nav-link[href="/#servicii"]');
if (desktopServicii) 
desktopServicii.classList.add('active');


// Expand mobile dropdown
const mobileDropdown = document.getElementById('mobileServiciiDropdown');
if (mobileDropdown) {
mobileDropdown.classList.remove('hidden');
document.getElementById('mobileServiciiArrow').classList.add('rotate-180');
}
}
});
</script>
