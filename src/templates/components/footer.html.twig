<footer class="bg-gray-900 text-white pt-16 pb-8">
	<div class="container mx-auto px-6">
		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
			<!-- Company Info -->
			<div>
				<img src="/logo-white.svg" alt="{{ site.name }}" class="h-12 w-auto mb-6">
				<p class="text-gray-400 leading-relaxed mb-6">
					{{ site.footer_description|default('We provide innovative solutions to help businesses grow and succeed in today\'s competitive market.') }}
                </p>
                <div class="flex space-x-4">
                    {% for social in socials|default([
                        {icon: 'fab fa-facebook-f', url: '#'},
                        {icon: 'fab fa-twitter', url: '#'},
                        {icon: 'fab fa-instagram', url: '#'},
                        {icon: 'fab fa-linkedin-in', url: '#'}
                    ]) %}
                        <a href="{{ social.url }}" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-yellow-400 transition-colors duration-300">
                            <i class="{{ social.icon }}"></i>
                        </a>
                    {% endfor %}
                </div>
            </div>
            
            <!-- Quick Links -->
            <div>
                <h3 class="text-lg font-bold mb-6 relative inline-block">
                    Quick Links
                    <span class="absolute bottom-0 left-0 w-1/2 h-0.5 bg-yellow-400"></span>
                </h3>
                <ul class="space-y-3">
                    <li><a href="{{ url_for('home') }}" class="text-gray-400 hover:text-white transition-colors duration-300">Home</a></li>
                    <li><a href="{{ url_for('about') }}" class="text-gray-400 hover:text-white transition-colors duration-300">About Us</a></li>
                    <li><a href="{{ url_for('services') }}" class="text-gray-400 hover:text-white transition-colors duration-300">Services</a></li>
                    <li><a href="{{ url_for('portfolio') }}" class="text-gray-400 hover:text-white transition-colors duration-300">Portfolio</a></li>
                    <li><a href="{{ url_for('blog') }}" class="text-gray-400 hover:text-white transition-colors duration-300">Blog</a></li>
                    <li><a href="{{ url_for('contact') }}" class="text-gray-400 hover:text-white transition-colors duration-300">Contact</a></li>
                </ul>
            </div>
            
            <!-- Services -->
            <div>
                <h3 class="text-lg font-bold mb-6 relative inline-block">
                    Our Services
                    <span class="absolute bottom-0 left-0 w-1/2 h-0.5 bg-yellow-400"></span>
                </h3>
                <ul class="space-y-3">
                    {% for service in services.items|default([
                        {title: 'Service One', url: '/services#service-one'},
                        {title: 'Service Two', url: '/services#service-two'},
                        {title: 'Service Three', url: '/services#service-three'},
                        {title: 'Service Four', url: '/services#service-four'}
                    ]) %}
                        <li><a href="{{ service.url }}" class="text-gray-400 hover:text-white transition-colors duration-300">{{ service.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            
            <!-- Contact Info -->
            <div>
                <h3 class="text-lg font-bold mb-6 relative inline-block">
                    Contact Us
                    <span class="absolute bottom-0 left-0 w-1/2 h-0.5 bg-yellow-400"></span>
                </h3>
                <ul class="space-y-4">
                    <li class="flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-yellow-400 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span class="text-gray-400">{{ site.address|default('123 Business Street, City, State 12345') }}</span>
                    </li>
                    <li class="flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-yellow-400 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <a href="mailto:{{ site.email|default('info@example.com') }}" class="text-gray-400 hover:text-white transition-colors duration-300">{{ site.email|default('info@example.com') }}</a>
                    </li>
                    <li class="flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-yellow-400 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <a href="tel:{{ site.phone|default('+1234567890') }}" class="text-gray-400 hover:text-white transition-colors duration-300">{{ site.phone|default('+1 (234) 567-890') }}</a>
                    </li>
                </ul>
            </div>
        </div>
        
        <hr class="border-gray-800 my-8">
        
        <!-- Bottom Footer -->
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
                <p class="text-gray-500 text-sm">
                    Â© {{ "now"|date("Y") }} {{ site.name|default('Company Name') }}. All rights reserved.
                </p>
            </div>
            
            <div class="flex space-x-6">
                <a href="#" class="text-gray-400 hover:text-yellow-400 transition-colors duration-300">Privacy Policy</a>
                <a href="#" class="text-gray-400 hover:text-yellow-400 transition-colors duration-300">Terms of Service</a>
            </div>
        </div>
    </div>
</footer> 
